<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="myVM" type="com.example.tm18app.viewModels.OtherUserProfileViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/inAppBackgroundColor">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".fragment.OtherProfileFragment">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="match_parent"
                    android:onClick="@{() -> myVM.onProfilePicClicked()}"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_person_black_80dp"
                    android:layout_marginTop="@dimen/margin_10"/>

                <TextView
                    android:id="@+id/namesTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profilePic"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"
                    android:paddingStart="10dp" />

                <TextView
                    android:id="@+id/emailTv"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/namesTv"
                    android:layout_marginTop="20dp"
                    android:paddingStart="10dp" />

                <TextView
                    android:id="@+id/goalsTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/emailTv"
                    android:layout_marginTop="20dp"
                    android:paddingStart="10dp"
                    android:text="@string/goals_colon" />

                <TextView
                    android:id="@+id/goalsInfoTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/goalsTv"
                    android:layout_marginTop="20dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp" />

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar"
                    android:layout_below="@id/goalsInfoTv"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/goalsInfoTv"
                    android:layout_marginTop="20dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:id="@+id/goalsUserRv"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/goalsInfoTv"
                    android:id="@+id/noPostsLayout"
                    android:visibility="gone"
                    android:padding="20dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="@string/you_have_no_posts"/>
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>
    </ScrollView></layout>