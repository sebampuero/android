<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="myVM" type="com.example.tm18app.viewModels.OtherUserProfileViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/inAppBackgroundColor">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".fragment.OtherProfileFragment">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="match_parent"
                    android:onClick="@{() -> myVM.onProfilePicClicked()}"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_person_black_80dp"
                    android:layout_marginTop="@dimen/margin_10"/>

                <include
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_below="@id/profilePic"
                    android:id="@+id/info_layout"
                    layout="@layout/profile_info_layout"/>

                <include
                    android:layout_below="@id/info_layout"
                    layout="@layout/profile_posts_layout"
                    android:id="@+id/postsLayout"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
            </RelativeLayout>
        </FrameLayout>
    </ScrollView></layout>