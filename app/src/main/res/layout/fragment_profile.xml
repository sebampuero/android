<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="myVM" type="com.example.tm18app.viewModels.ProfileViewModel" />
    </data>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragment.ProfileFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/inAppBackgroundColor">

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person_black_80dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/namesTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/profilePic"
                android:layout_marginTop="20dp"
                android:paddingStart="10dp"
                android:text="@{myVM.names}" />

            <TextView
                android:id="@+id/emailTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/namesTv"
                android:layout_marginTop="20dp"
                android:paddingStart="10dp"
                android:text="@{myVM.email}" />

            <TextView
                android:id="@+id/goalsTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/emailTv"
                android:layout_marginTop="20dp"
                android:paddingStart="10dp"
                android:text="@string/goals_colon" />

            <TextView
                android:id="@+id/goalsInfoTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/goalsTv"
                android:layout_marginTop="20dp"
                android:paddingStart="10dp"
                android:text="@{myVM.goalsList}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/goalsInfoTv"
                android:paddingStart="10dp"
                android:layout_marginTop="20dp"
                android:id="@+id/editLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/edit_your_information"/>
                <ImageButton
                    android:id="@+id/editInfoBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> myVM.onEditInfoClicked()}"
                    android:backgroundTint="@color/inAppBackgroundColor"
                    android:src="@drawable/ic_edit_black_24dp" />

            </LinearLayout>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:layout_below="@id/editLayout"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editLayout"
                android:layout_marginTop="20dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:id="@+id/goalsUserRv"/>
        </RelativeLayout>


    </FrameLayout>
</ScrollView></layout>