<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="myVM" type="com.example.tm18app.viewModels.CurrentProfileViewModel" />
    </data>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/inAppBackgroundColor">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragment.ProfileFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarProfile"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/navBottomBackgroundColor"/>

            <ImageView
                android:id="@+id/profilePic"
                android:layout_below="@id/toolbarProfile"
                android:layout_width="match_parent"
                android:onClick="@{() -> myVM.onProfilePicClicked()}"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person_black_80dp"
                android:layout_marginTop="@dimen/margin_10"/>

            <include
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@id/profilePic"
                android:id="@+id/info_layout"
                layout="@layout/profile_info_layout"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/info_layout"
                android:paddingStart="@dimen/padding_10"
                android:paddingEnd="@dimen/padding_10"
                android:layout_marginTop="@dimen/margin_10_2"
                android:id="@+id/editLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="@string/edit_your_information"/>
                <ImageButton
                    android:id="@+id/editInfoBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> myVM.onEditInfoClicked()}"
                    android:backgroundTint="@color/inAppBackgroundColor"
                    android:src="@drawable/ic_edit_black_24dp" />

            </LinearLayout>

            <include
                android:layout_below="@id/editLayout"
                layout="@layout/profile_posts_layout"
                android:id="@+id/postsLayout"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </RelativeLayout>


    </FrameLayout>
</ScrollView></layout>