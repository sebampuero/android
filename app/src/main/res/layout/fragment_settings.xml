<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="myVM" type="com.example.tm18app.viewModels.MyViewModel" />
    </data>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SettingsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/inAppBackgroundColor">

        <TextView
            android:id="@+id/settingsTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:paddingStart="10dp"
            android:text="Language" />

        <RadioButton
            android:id="@+id/englishRB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/settingsTv"
            android:paddingStart="10dp"
            android:text="English" />

        <RadioButton
            android:id="@+id/germanRNB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/englishRB"
            android:paddingStart="10dp"
            android:text="Deutsch" />

        <TextView
            android:id="@+id/switchTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/germanRNB"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            android:text="Detect automatically" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/switchTv"
            android:paddingStart="10dp"
            android:text="" />

    </RelativeLayout>


</FrameLayout></layout>